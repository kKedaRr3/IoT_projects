<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<AnchorPane xmlns="http://javafx.com/javafx/19.0.2.1"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.VisualizeDataController">

    <!-- Wykres umieszczony na gÃ³rze -->
    <LineChart fx:id="accelerationChart" prefWidth="800" prefHeight="400">
        <xAxis>
            <NumberAxis fx:id="xAxis" label="Timestamp" />
        </xAxis>
        <yAxis>
            <NumberAxis fx:id="yAxis" label="Acceleration" />
        </yAxis>
        <!-- Pozycjonowanie w AnchorPane -->
        <AnchorPane.topAnchor>20.0</AnchorPane.topAnchor>
        <AnchorPane.leftAnchor>20.0</AnchorPane.leftAnchor>
        <AnchorPane.rightAnchor>20.0</AnchorPane.rightAnchor>
    </LineChart>

    <!-- Przycisk umieszczony w lewym dolnym rogu -->
    <Button text="Back to Dashboard" onAction="#handleBackToDashboard"
            layoutX="10.0" layoutY="450.0"
            AnchorPane.bottomAnchor="20.0"
            AnchorPane.leftAnchor="20.0" />
</AnchorPane>
