<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<AnchorPane xmlns="http://javafx.com/javafx/19.0.2.1"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.VisualizeDataController">

    <!-- Wykres umieszczony na Å›rodku -->
    <LineChart fx:id="accelerationChart" prefWidth="800" prefHeight="400">
        <xAxis>
            <NumberAxis fx:id="xAxis" label="Timestamp" />
        </xAxis>
        <yAxis>
            <NumberAxis fx:id="yAxis" label="Acceleration" />
        </yAxis>
        <AnchorPane.topAnchor>50.0</AnchorPane.topAnchor>
        <AnchorPane.leftAnchor>50.0</AnchorPane.leftAnchor>
        <AnchorPane.rightAnchor>50.0</AnchorPane.rightAnchor>
    </LineChart>

    <!-- TextArea pod wykresem -->
    <TextArea fx:id="gapDetectionOutput" editable="false" prefHeight="200" wrapText="true"
              AnchorPane.topAnchor="460.0"
              AnchorPane.leftAnchor="50.0"
              AnchorPane.rightAnchor="50.0" />

    <!-- Przycisk do analizy -->
    <Button text="Analyze Gaps in Data" onAction="#analyzeGapsInData"
            AnchorPane.bottomAnchor="60.0"
            AnchorPane.leftAnchor="20.0" />

    <!-- Przycisk powrotu do panelu -->
    <Button text="Back to Dashboard" onAction="#handleBackToDashboard"
            AnchorPane.bottomAnchor="20.0"
            AnchorPane.leftAnchor="20.0" />
</AnchorPane>
