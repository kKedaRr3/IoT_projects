<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextArea?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.DashboardController">
    <Label fx:id="welcomeLabel" text="Welcome to the GapAnalyzer!" AnchorPane.topAnchor="40" AnchorPane.leftAnchor="40"/>

    <!-- Log Out Button -->
    <Button text="Log Out" fx:id="logOutButton" onAction="#handleLogOut" AnchorPane.topAnchor="10" AnchorPane.rightAnchor="10"/>

    <!-- ESP32 Config Button -->
    <Button text="Config" fx:id="esp32ConfigButton" onAction="#handleEsp32Config" AnchorPane.topAnchor="10" AnchorPane.rightAnchor="90"/>

    <!-- MQTT View Button -->
    <Button text="MQTT View" fx:id="mqttViewButton" onAction="#handleMqttView" AnchorPane.topAnchor="10" AnchorPane.rightAnchor="160"/>

    <Button text="Visualize Data" fx:id="visualizeDataButton" onAction="#handleVisualizeData" AnchorPane.topAnchor="10" AnchorPane.rightAnchor="260"/>

    <StackPane AnchorPane.topAnchor="80" AnchorPane.bottomAnchor="80" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50">
        <VBox alignment="CENTER" spacing="20">
            <Label text="How to use the application:"
                   style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: black;" />
            <Label text="Firstly, click on 'Config' to configure your ESP32 and gap threshold. You will need to manually enter the ESP MAC address."
                   style="-fx-font-size: 16px; -fx-text-fill: black;" />
            <Label text="Then, go to 'MQTT View' to connect to the MQTT broker and monitor raw data."
                   style="-fx-font-size: 16px; -fx-text-fill: black;" />
            <Label text="Click the 'Visualize Data' button to view the data in a visual format."
                   style="-fx-font-size: 16px; -fx-text-fill: black;" />
        </VBox>
    </StackPane>
</AnchorPane>
